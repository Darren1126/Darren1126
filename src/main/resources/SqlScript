CREATE DATABASE project_0;
USE project_0;
/*Creates table for bank users*/

CREATE TABLE BK_USERS(
 USER_ID DECIMAL(10),
 FIRSTNAME VARCHAR(36) NOT NULL,
 LASTNAME VARCHAR(36) NOT NULL,
 USERNAME VARCHAR(36) UNIQUE NOT NULL,
 USER_PASSWORD VARCHAR(36) NOT NULL,
 CONSTRAINT bk_pk PRIMARY KEY (USER_ID)
);



/*Creates table for bank accounts*/

CREATE TABLE BK_ACCOUNTS (

 ACC_ID DECIMAL(10) PRIMARY KEY,
 ACC_TYPE_ID DECIMAL(10) NOT NULL,
 ACC_OWNER DECIMAL(10) NOT NULL,
 ACC_BALANCE DECIMAL(10) NOT NULL,

 FOREIGN KEY (ACC_TYPE_ID) REFERENCES BK_ACCOUNT_TYPES(TYPE_ID),
 FOREIGN KEY (ACC_OWNER) REFERENCES BK_USERS(USER_ID)

);

/*Creates table for account types*/

CREATE TABLE BK_ACCOUNT_TYPES (

 TYPE_ID DECIMAL(10) PRIMARY KEY,
 ACC_TYPE VARCHAR(24) NOT NULL

);

##Create sequence generates unique integers for multiple bank users bank accounts and account types##


CREATE SEQUENCE BK_USER_SEQ;

CREATE SEQUENCE BK_ACCOUNTS_SEQ;


##CREATE SEQUENCE BK_ACCOUNT_TYPES_SEQ;##


SELECT * FROM BK_USERS;
SELECT * FROM BK_ACCOUNTS;
SELECT * FROM BK_ACCOUNT_TYPES;



